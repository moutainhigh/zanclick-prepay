<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zanclick.prepay.order.mapper.SettleRateMapper">
    <resultMap id="BaseResultMap" type="com.zanclick.prepay.order.entity.SettleRate">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="rate" property="rate" jdbcType="VARCHAR"/>
        <result column="num" property="num" jdbcType="INTEGER"/>
        <result column="app_id" property="appId" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="table">settle_rate</sql>
    <sql id="Base_Column_List">
            `id`,
            `rate`,
            `num`,
            `app_id`
    </sql>
    <sql id="Base_Where_Clause">
        <where>
            <trim prefixOverrides="and">
                <if test="id != null">
                    AND `id`=#{id}
                </if>
                <if test="rate != null and rate != ''">
                    AND `rate`=#{rate}
                </if>
                <if test="num != null">
                    AND `num`=#{num}
                </if>
                <if test="appId != null and appId != ''">
                    AND `app_id`=#{appId}
                </if>
            </trim>
        </where>
        <if test="offset == null and limit != null">
            limit #{limit}
        </if>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </sql>

    <!-- 查询总数 -->
    <select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
        SELECT count(id)
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 查询 -->
    <select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <select id="selectByAppIdAndNum" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE app_id = #{appId} AND num = #{num} ORDER BY id DESC LIMIT 1
    </select>

    <insert id="insert" parameterType="com.zanclick.prepay.order.entity.SettleRate" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO
        <include refid="table"/>
        (
        `id`,
        `rate`,
        `num`,
        `app_id`
        )
        VALUES(
        #{id},
        #{rate},
        #{num},
        #{appId}
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table"/>
        (
        `id`,
        `rate`,
        `num`,
        `app_id`
        )
        VALUES
        <foreach collection="list" item="cm" index="index" separator=",">
            (
            #{cm.id},
            #{cm.rate},
            #{cm.num},
            #{cm.appId}
            )
        </foreach>
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE id=#{id}
    </select>

    <update id="updateById" parameterType="com.zanclick.prepay.order.entity.SettleRate">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="rate != null and rate != ''">
                `rate`=#{rate},
            </if>
            <if test="num != null">
                `num`=#{num},
            </if>
            <if test="appId != null and appId != ''">
                `app_id`=#{appId},
            </if>
        </set>
        WHERE id=#{id}
    </update>
</mapper>