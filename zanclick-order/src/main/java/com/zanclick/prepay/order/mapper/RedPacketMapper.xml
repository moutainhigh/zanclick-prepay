    <insert id="insert" parameterType="com.zanclick.prepay.order.entity.RedPacket" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO
        <include refid="table"/>
        (
        `id`,
        `amount`,
        `title`,
        `out_order_no`,
        `out_trade_no`,
        `create_time`,
        `finish_time`,
        `app_id`,
        `state`,
        `type`,
        `way_id`,
        `merchant_no`,
        `seller_no`,
        `name`
        )
        VALUES(
        #{id},
        #{amount},
        #{title},
        #{outOrderNo},
        #{outTradeNo},
        #{createTime},
        #{finishTime},
        #{appId},
        #{state},
        #{type},
        #{wayId},
        #{merchantNo},
        #{sellerNo},
        #{name}
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table"/>
        (
        `id`,
        `amount`,
        `title`,
        `out_order_no`,
        `out_trade_no`,
        `create_time`,
        `finish_time`,
        `app_id`,
        `state`,
        `type`,
        `way_id`,
        `merchant_no`,
        `seller_no`,
        `name`
        )
        VALUES
        <foreach collection="list" item="cm" index="index" separator=",">
            (
            #{cm.id},
            #{cm.amount},
            #{cm.title},
            #{cm.outOrderNo},
            #{cm.outTradeNo},
            #{cm.createTime},
            #{cm.finishTime},
            #{cm.appId},
            #{cm.state},
            #{cm.type},
            #{cm.wayId},
            #{cm.merchantNo},
            #{cm.sellerNo},
            #{cm.name}
            )
        </foreach>
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE id=#{id}
    </select>

    <update id="updateById" parameterType="com.zanclick.prepay.order.entity.RedPacket">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="amount != null and amount != ''">
                `amount`=#{amount},
            </if>
            <if test="title != null and title != ''">
                `title`=#{title},
            </if>
            <if test="outOrderNo != null and outOrderNo != ''">
                `out_order_no`=#{outOrderNo},
            </if>
            <if test="outTradeNo != null and outTradeNo != ''">
                `out_trade_no`=#{outTradeNo},
            </if>
            <if test="createTime != null">
                `create_time`=#{createTime},
            </if>
            <if test="finishTime != null">
                `finish_time`=#{finishTime},
            </if>
            <if test="appId != null and appId != ''">
                `app_id`=#{appId},
            </if>
            <if test="state != null">
                `state`=#{state},
            </if>
            <if test="type != null">
                `type`=#{type},
            </if>
            <if test="wayId != null and wayId != ''">
                `way_id`=#{wayId},
            </if>
            <if test="merchantNo != null and merchantNo != ''">
                `merchant_no`=#{merchantNo},
            </if>
            <if test="sellerNo != null and sellerNo != ''">
                `seller_no`=#{sellerNo},
            </if>
            <if test="name != null and name != ''">
                `name`=#{name},
            </if>
        </set>
        WHERE id=#{id}
    </update>
</mapper>