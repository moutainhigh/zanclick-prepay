<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zanclick.prepay.authorize.mapper.AuthorizeOrderRecordMapper">
    <resultMap id="BaseResultMap" type="com.zanclick.prepay.authorize.entity.AuthorizeOrderRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="auth_no" property="authNo" jdbcType="VARCHAR"/>
        <result column="trade_no" property="tradeNo" jdbcType="VARCHAR"/>
        <result column="money" property="money" jdbcType="VARCHAR"/>
        <result column="num" property="num" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="expect_time" property="expectTime" jdbcType="VARCHAR"/>
        <result column="real_time" property="realTime" jdbcType="TIMESTAMP"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="table">authorize_order_record</sql>

    <sql id="Base_Column_List">
        id,
        auth_no,
        trade_no,
        money,
        num,
        create_time,
        expect_time,
        real_time,
        state
    </sql>

    <sql id="Base_Where_Clause">
        <where>
            <trim prefixOverrides="and">
                <if test="id != null">AND id = #{id}</if>
                <if test="state != null">AND state = #{state}</if>
                <if test="authNo != null and authNo != ''">AND auth_no = #{authNo}</if>
                <if test="tradeNo != null and tradeNo != ''">AND trade_no = #{tradeNo}</if>
            </trim>
        </where>
        ORDER BY id DESC
        <if test="offset == null and limit != null">
            limit #{limit}
        </if>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </sql>

    <!-- 查询总数 -->
    <select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
        SELECT count(id)
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 查询 -->
    <select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE id=#{id}
    </select>

    <select id="selectByAuthNo" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE auth_no = #{authNo} ORDER BY id ASC
    </select>

    <select id="selectByAuthNoAndNum" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE
        auth_no = #{authNo}
        <if test="num != null">AND num = #{num}</if>
        ORDER BY id ASC
    </select>

    <select id="selectMaxNum" resultType="java.lang.Integer" parameterType="java.lang.String">
        SELECT
        num
        FROM
        <include refid="table"/>
        WHERE
        auth_no = #{authNo}
        ORDER BY num DESC LIMIT 1
    </select>

    <insert id="insert" parameterType="com.zanclick.prepay.authorize.entity.AuthorizeOrderRecord" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO
        <include refid="table"/>
        (
        id,
        auth_no,
        trade_no,
        money,
        num,
        create_time,
        expect_time,
        real_time,
        state
        )
        VALUES
        (
        #{id},
        #{authNo},
        #{tradeNo},
        #{money},
        #{num},
        #{createTime},
        #{expectTime},
        #{realTime},
        #{state}
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table"/>
        (
        id,
        auth_no,
        trade_no,
        money,
        num,
        create_time,
        expect_time,
        real_time,
        state
        )
        VALUES
        <foreach collection="list" item="cm" index="index" separator=",">
            (
            #{cm.id},
            #{cm.authNo},
            #{cm.tradeNo},
            #{cm.money},
            #{cm.num},
            #{cm.createTime},
            #{cm.expectTime},
            #{cm.realTime},
            #{cm.state}
            )
        </foreach>
    </insert>

    <update id="updateById" parameterType="com.zanclick.prepay.authorize.entity.AuthorizeOrderRecord">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="tradeNo != null and tradeNo != ''">trade_no = #{tradeNo},</if>
            <if test="realTime != null">real_time = #{realTime},</if>
            <if test="state != null">state = #{state},</if>
        </set>
        WHERE id=#{id}
    </update>

</mapper>